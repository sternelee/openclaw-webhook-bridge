page{background-color:#f5f5f5;color:#333;font-family:-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif;font-size:16rpx;line-height:1.5}.container{padding:20rpx}.card{background:#fff;border-radius:8rpx;box-shadow:0 2rpx 4rpx rgba(0,0,0,.1);margin-bottom:16rpx;padding:16rpx}.btn{background-color:#1890ff;border:none;border-radius:4rpx;color:#fff;cursor:pointer;display:inline-block;font-size:14rpx;padding:10rpx 20rpx;transition:background-color .3s}.btn:hover{background-color:#40a9ff}.btn:active{background-color:#096dd9}.btn.btn-primary{background-color:#1890ff}.btn.btn-success{background-color:#52c41a}.btn.btn-danger{background-color:#ff4d4f}.btn.btn-disabled{background-color:#d9d9d9;cursor:not-allowed}.input{border:1rpx solid #d9d9d9;border-radius:4rpx;box-sizing:border-box;font-size:14rpx;padding:10rpx;width:100%}.input:focus{border-color:#1890ff;box-shadow:0 0 0 2rpx rgba(24,144,255,.2);outline:none}.textarea{border:1rpx solid #d9d9d9;border-radius:4rpx;box-sizing:border-box;font-size:14rpx;min-height:80rpx;padding:10rpx;resize:vertical;width:100%}.textarea:focus{border-color:#1890ff;box-shadow:0 0 0 2rpx rgba(24,144,255,.2);outline:none}.flex{display:flex}.flex-column{flex-direction:column}.flex-center{align-items:center;justify-content:center}.flex-between{justify-content:space-between}.mt-8{margin-top:8rpx}.mt-16{margin-top:16rpx}.mt-24{margin-top:24rpx}.mb-8{margin-bottom:8rpx}.mb-16{margin-bottom:16rpx}.mb-24{margin-bottom:24rpx}.p-8{padding:8rpx}.p-16{padding:16rpx}.p-24{padding:24rpx}.text-center{text-align:center}.text-right{text-align:right}.text-left{text-align:left}.text-sm{font-size:12rpx}.text-base{font-size:14rpx}.text-lg{font-size:16rpx}.text-xl{font-size:18rpx}.text-gray{color:#999}.text-danger{color:#ff4d4f}.text-success{color:#52c41a}