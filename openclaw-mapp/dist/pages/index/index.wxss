.index-page{background:linear-gradient(135deg,#667eea,#764ba2);box-sizing:border-box;min-height:100vh;padding:40rpx 20rpx}.index-container{display:flex;flex-direction:column;gap:24rpx}.counter-card{background:#fff;border-radius:16rpx;box-shadow:0 8rpx 24rpx rgba(0,0,0,.15);padding:32rpx 24rpx;text-align:center}.counter-title{color:#666;display:block;font-size:18rpx;margin-bottom:16rpx}.counter-value{background:linear-gradient(135deg,#667eea,#764ba2);-webkit-background-clip:text;display:block;font-size:64rpx;font-weight:700;-webkit-text-fill-color:transparent;margin-bottom:32rpx}.counter-actions{display:flex;gap:12rpx}.counter-btn{background:linear-gradient(135deg,#667eea,#764ba2);border:none;border-radius:8rpx;color:#fff;flex:1;font-size:15rpx;font-weight:600;height:44rpx}.counter-btn.reset{background:#f5f5f5;color:#666}.counter-btn::after{border:none}.info-card{background:hsla(0,0%,100%,.95);border-radius:12rpx;padding:24rpx}.info-title{color:#333;display:block;font-size:20rpx;font-weight:600;margin-bottom:12rpx}.info-desc{color:#666;display:block;font-size:14rpx;line-height:1.6;margin-bottom:20rpx}.feature-list{display:flex;flex-direction:column;gap:12rpx}.feature-item{align-items:center;display:flex;gap:8rpx}.feature-dot{color:#667eea;font-size:16rpx}.feature-text{color:#666;font-size:14rpx}